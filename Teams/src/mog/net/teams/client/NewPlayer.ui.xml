<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:DecoratorPanel>
		<g:FormPanel ui:field="form">
			<g:HTMLPanel>
				<table>
					<tr>
						<td>First name</td>
						<td>
							<g:TextBox ui:field="firstNameTextBox" name="firstName" />
						</td>
					</tr>

					<tr>
						<td>Surname</td>
						<td>
							<g:TextBox ui:field="surnameTextBox" name="surname" />
						</td>
					</tr>

					<tr>
						<td>Email</td>
						<td>
							<g:TextBox ui:field="emailTextBox" name="emailAddress" />
						</td>
					</tr>

					<tr>
						<td>Photo</td>
						<td>
							<g:FileUpload ui:field="imageUpload" name="imageUpload" />
						</td>
					</tr>

					<tr colspan='2'>
						<td>
							<g:Button styleName="{style.important}" ui:field="submitButton">Submit</g:Button>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:FormPanel>
	</g:DecoratorPanel>
</ui:UiBinder> 