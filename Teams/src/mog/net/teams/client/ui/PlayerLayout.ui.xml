<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:h="urn:import:mog.net.teams.client.ui">
	<ui:style>
		.header {
			border-bottom: 1px solid gray;

		}
		
	</ui:style>
	
	<g:DockLayoutPanel ui:field="rootLayout">
	
		<g:center>
			<g:HTMLPanel>
				<div class="centerTitle">
					<table style="width: 100%;">
						<tr>
							<td>Team Management</td>
							<td style="text-align: right;">
								<g:Button ui:field="newPlayerButton">New Player</g:Button>
							</td>
						</tr>
					
					</table>
					
				</div>
				<div class="playerList">
				<g:FlowPanel ui:field="playersFlowPanel"></g:FlowPanel>
				</div>	
			</g:HTMLPanel>
		</g:center>
		
		<g:east size="300">
			<g:SimplePanel ui:field="newPlayerPanel" styleName="editPlayerColumn"></g:SimplePanel>
		</g:east>
	
	</g:DockLayoutPanel>

		
		

</ui:UiBinder> 