<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
	</ui:style>
	
	<g:DockLayoutPanel>
		<g:center>
			<g:HTMLPanel>
				<div class="centerTitle">
					<table style="width: 100%;">
						<tr>
							<td>Fixtures</td>
							<td style="text-align: right;">
								<g:Button ui:field="viewPlayersButton">Players</g:Button>
								<g:Button ui:field="newMatchButton">New Match</g:Button>
							</td>
						</tr>
					
					</table>
					
				</div>
				<div class="playerList">
					<g:VerticalPanel ui:field="matchesPanel"></g:VerticalPanel>
				</div>	
			</g:HTMLPanel>
		</g:center>
		
		<g:east size="400">
			<g:SimplePanel ui:field="newMatchPanel" styleName="editPlayerColumn"></g:SimplePanel>
		</g:east>
	
	</g:DockLayoutPanel>
	
	
</ui:UiBinder> 